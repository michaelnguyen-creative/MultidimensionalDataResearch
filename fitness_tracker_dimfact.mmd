erDiagram
    WORKOUT_SESSION ||--o{ TIME : "time_key"
    WORKOUT_SESSION ||--o{ EXERCISE : "exercise_key"
    WORKOUT_SESSION ||--o{ EQUIPMENT : "equipment_key"
    WORKOUT_SESSION ||--o{ LOCATION : "location_key"
    
    WORKOUT_SESSION {
        int time_key FK
        int exercise_key FK
        int equipment_key FK
        int location_key FK
        decimal duration_minutes "how long"
        int calories_burned "energy spent"
        int reps_completed "volume"
        decimal distance_km "for cardio"
    }
    
    TIME {
        int time_key PK
        date date
        string day_of_week
        string time_of_day "morning/afternoon/evening"
        int month
        string season
        int year
        string weather "sunny/rainy/cold/hot"
    }
    
    EXERCISE {
        int exercise_key PK
        string exercise_name "running/pushups/yoga/cycling"
        string category "cardio/strength/flexibility/sports"
        string intensity_level "light/moderate/vigorous"
        string muscle_group "legs/arms/core/full_body"
    }
    
    EQUIPMENT {
        int equipment_key PK
        string equipment_name "treadmill/dumbbells/mat/bike"
        string equipment_type "machine/free_weight/bodyweight/outdoor"
        string brand
    }
    
    LOCATION {
        int location_key PK
        string location_name "home/gym/park/trail"
        string location_type "indoor/outdoor"
        string city
        string facility_name "Planet_Fitness/Central_Park"
    }
